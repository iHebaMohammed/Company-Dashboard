@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "Forget Password";
    Layout = "_AuthanticationLayout";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="SendEmail" method="post">
			<div asp-validation-summary="All"></div>
			<input class="text email" asp-for="Email" placeholder="Email" required="">
			<input type="submit" value="Send ResetPasswordLink To Your Email">
		</form>
	</div>
</div>

@section Scripts{
	<partial name="_ValidationScriptsPartial" />
}

