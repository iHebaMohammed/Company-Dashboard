@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>All Employees</h1>
<br />
<br />

<form asp-action="Index">
    <div class="row align-content-sm-center justify-content-center">
        <div class="col-8">
            <input type="text" placeholder="Search By Name" class="form-control" name="SearchValue" />
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-success"/>
        </div>
    </div>
</form>

<br />
<br />
<a asp-action="Create" class="btn btn-primary">Create New Employee</a>
<br />
@if (Model.Count() > 0)
{
    <br />
    <br />
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(E=> E.Name)</th>
                <th>@Html.DisplayNameFor(E => E.Email)</th>
                <th>@Html.DisplayNameFor(E => E.Image)</th>
                <th>@Html.DisplayNameFor(E => E.HireDate)</th>
                <th>@Html.DisplayNameFor(E => E.Department)</th>
                <th>@Html.DisplayNameFor(E=> E.Address)</th>
                <th>@Html.DisplayNameFor(E=> E.Age)</th>
                <th>@Html.DisplayNameFor(E=> E.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(E => E.IsActive)</th>
                <th>@Html.DisplayNameFor(E => E.Salary)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(M => item.Name)</td>
                    <td>@Html.DisplayFor(M => item.Email)</td>
                    <td>
                        <img src="~/files/images/@item.ImageName" alt="Employee Image" class="img-fluid" />
                    </td>
                    <td>@Html.DisplayFor(M => item.HireDate)</td>
                    <th>@Html.DisplayFor(M => item.Department.Name)</th>
                    <td>@Html.DisplayFor(M => item.Address)</td>
                    <td>@Html.DisplayFor(M => item.Age)</td>
                    <td>@Html.DisplayFor(M => item.PhoneNumber)</td>
                    <td>@Html.DisplayFor(M => item.IsActive)</td>
                    <td>@Html.DisplayFor(M => item.Salary)</td>
                    <partial name="_ButtonPartialView" model="@item.Id.ToString()" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="m-5 alert alert-warning">
        <h3>There is No Employees</h3>
    </div>
}
