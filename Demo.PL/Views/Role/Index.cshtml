@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Index";
}

<h1>All Role</h1>
<br />
<br />

<form asp-action="Index">
    <div class="row align-content-sm-center justify-content-center">
        <div class="col-8">
            <input type="text" placeholder="Search By Name" class="form-control" name="SearchValue" />
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-success"/>
        </div>
    </div>
</form>

<br />
<br />
<a asp-action="Create" class="btn btn-primary">Create New Role</a>
<br />
@if (Model.Count() > 0)
{
    <br />
    <br />
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                
                <th>@Html.DisplayNameFor(R => R.Id)</th>
                <th>@Html.DisplayNameFor(R => R.Name)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>@Html.DisplayFor(M => item.Id)</th>
                    <th>@Html.DisplayFor(M => item.Name)</th>
                    <partial name="_ButtonPartialView" model="@item.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="m-5 alert alert-warning">
        <h3>There is No Users</h3>
    </div>
}
